// Base class
class Animal {
    void eat() {
        System.out.println("This animal is eating...");
    }
}

// Derived class
class Lion extends Animal {
    void roar() {
        System.out.println("The lion roars loudly!");
    }
}

// Main class
public class ZooApp {
    public static void main(String[] args) {
        Lion lion = new Lion();
        lion.eat();   // inherited from Animal
        lion.roar();  // specific to Lion
    }
}
